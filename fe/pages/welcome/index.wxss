/* pages/welcome/index.wxss */

.public-welcome {
  width: 100%;
  height: 100vh;
}

.item-top {
  margin: 60rpx auto 0;
  width: 640rpx;
  display: block;
  height: 180rpx;
}

.item-middle {
  margin: 60rpx auto 0;
  width: 640rpx;
  display: block;
  height: 700rpx;
}

.welcome-btn {
  position: absolute;
  bottom: 20vh;
  left: 50%;
  transform: translateX(-50%);
}

.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 50rpx;
}

.wx-swiper-dot{
    width:10rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}

.wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #686d9a;
  border-radius: 8rpx;
}

.wx-swiper-dot-active::before {
  background: #686d9a;
  width: 27rpx;
}
