/* pages/ask/receive/index.wxss */
.receive-card {
  width: 90vw;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx 10rpx #F0F0F0;
  margin: 30rpx auto 0;
  border-radius: 20rpx;
}
.receive-card-item .item_top {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #F0F0F0;
  font-size: 14px;
}
.receive_question {
  flex: 1;
}
.receive-card-item .item_bottom {
  display: flex;
  font-size: 12px;
  color: #C0C0C0;
  padding-top: 30rpx;
}
.item_bottom .total{
  padding-right: 18rpx;
}
.item_bottom .unread{
  
}
.item_bottom .time{
  flex: 1;
  text-align: right;
}
.receive_icon {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
.receive_text {
  display: inline-block;
  vertical-align: middle;
}
